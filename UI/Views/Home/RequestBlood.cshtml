@{
    ViewData["Title"] = "Request Blood";
}

<h2>@ViewData["Title"]</h2>

<style>
    .column {
        float: left;
        width: 50%;
    }
</style>
<hr />
<body>
    <form>
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="column">
                <div class="form-group">
                    <label class="control-label col-md-6">Requestor</label>
                    <div class="col-md-10">
                        <input class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-6">Blood Type:</label>
                    <div class="col-md-10">
                        <select class="form-control">
                            <option value="" disabled selected>Select blood type</option>
                            <option value="0+">0+</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-6">Email</label>
                    <div class="col-md-10">
                        <input class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-6">Number Of Units</label>
                    <div class="col-md-10">
                        <input class="form-control" />
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="form-group">
                    <label class="control-label col-md-6">City:</label>
                    <div class="col-md-10">
                        <select class="form-control">
                            <option value="" disabled selected>Select city</option>
                            <option value="İzmir">İzmir</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-6">Town:</label>
                    <div class="col-md-10">
                        <select class="form-control">
                            <option value="" disabled selected>Select town</option>
                            <option value="Bornova">Bornova</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-6">Duration Of Search(days)</label>
                    <div class="col-md-10">
                        <input class="form-control" />
                    </div>
                </div>          
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-6">Reason</label>
            <div class="col-md-10">
                <textarea cols="20" rows="5" class="form-control"></textarea>
            </div>
        </div>        
    </form>
</body>
<hr />
<body>
    <!-- Add other donor fields here -->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>
    </div>
</body>



